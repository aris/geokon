	public void actionPerformed(ActionEvent e) {

			selected = (String) HRL_1.getSelectedValue();		
			String[] value = selected.split("\\s+");
			String name = FirstNametxt.getText();
			String Lastname = LastNameTxt.getText();
			String salar = Salarytxt.getText();
			String IDsection = Section.getText();

			try{				
				java.sql.Connection conn1 = DriverManager.getConnection("jdbc:mysql://127.0.0.1:3306/hrm","root","root");
				String quer="UPDATE employee  SET FirstName='"+name+"',LastName='"+Lastname+"',Salary='"+salar+"',IDsection='"+IDsection+"' WHERE idemployee='"+value[0]+"'";
				PreparedStatement ps=(PreparedStatement) conn1.prepareStatement(quer);
				ps.executeUpdate();
				ps.close();											
				JOptionPane.showMessageDialog(null, "Μόλις έγινε η Επεξεργασία !");		
			    conn1.close();
			    FirstNametxt.setText("");
			    LastNameTxt.setText("");
			    Salarytxt.setText("");
			    Section.setText("");
				    
				
				}catch (Exception ex){
					
					JOptionPane.showMessageDialog(null, "Αποτυχία Επεξεργασίας δεδομένων "+sections+" !");			
				}}
	
	});
