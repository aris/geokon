	Load.setBounds(61, 101, 142, 35);
	Panel.add(Load);
	Load.addActionListener(new ActionListener() {
		public void actionPerformed(ActionEvent e) {
			try{
				
				String item = comboBox.getSelectedItem().toString();			
				java.sql.Connection conn = DriverManager.getConnection("jdbc:mysql://127.0.0.1:3306/hrm","root","root");
				String query="Select LastName,FirstName,Salary,rate,idemployee,a.IDsection From Employee as a inner join sections as b "
						+ "on a.IDsection=b.IDsection where b.Section='"+item+"'";
				PreparedStatement prepareStat=(PreparedStatement) conn.prepareStatement(query);
				ResultSet rs=prepareStat.executeQuery();	
				Statement stat = conn.createStatement();	  	
			    DefaultListModel<Object> DLM = new DefaultListModel<Object>();
				while(rs.next()){
					
					hr[j][0]=rs.getString("idemployee");
					hr[j][1]=rs.getString("LastName");
					hr[j][2]=rs.getString("FirstName");
					hr[j][3]=rs.getString("Salary");
					hr[j][4]=rs.getString("rate");				
					hr[j][5]=rs.getString("IDsection");
					Lista=hr[j][0]+"      "+hr[j][1]+"       "+hr[j][2]+"     "+hr[j][3] +"     "+hr[j][4]+ "      "+hr[j][5];
					DLM.addElement(Lista);
					HRJlist[j]=j;
					j=j+1;				
				}
			
				HRL_1.setModel(DLM);
				prepareStat.close();
				rs.close();	
			    stat.close();
			    conn.close();			
			}catch (Exception ex){				
				JOptionPane.showMessageDialog(null, ex);
			}
			
		}
	});
		
